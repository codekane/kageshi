{
  "manifest_version": 2,
  "name": "Kageshit",
  "version": "1",

  "description": "Autoloads a shim on ezcapechat.com to provide additional functionality, and fix stupid bugs.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "*://www.ezcapechat.com/rooms/*",
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://www.ezcapechat.com/rooms/*"],
      "js": ["kageshit.js"]
    }
  ]

}
